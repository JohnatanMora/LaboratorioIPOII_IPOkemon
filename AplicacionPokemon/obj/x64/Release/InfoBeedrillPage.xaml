        <local:UserControl_Beedrill VariableSizedWrapGrid.ColumnSpan="1" Botones="False" Grid.ColumnSpan="4" Grid.Row="3" Grid.RowSpan="4" Margin="189,0,0,104"/>

        <TextBlock x:ConnectionId='2' x:Name="Descripcion" TextWrapping="Wrap" Text="Beedrill es un Pokémon de tipo Bicho/Veneno que forma parte de la franquicia de Pokémon. Es la evolución final de Weedle, y su apariencia se asemeja a la de una abeja gigante. Beedrill es conocido por su agresividad y su habilidad para atacar con una velocidad y precisión impresionantes. Beedrill tiene un cuerpo delgado y estilizado, con un exoesqueleto amarillo y rayas negras en su abdomen y brazos. Sus ojos son grandes y compuestos, proporcionándole una excelente visión. En su cabeza destacan un par de antenas cortas y una aguja venenosa afilada.
" TextAlignment="Justify" Grid.Column="5" Grid.ColumnSpan="4" Grid.Row="4" Foreground="#55ad7a" FontFamily="Assets/Robotica.ttf"/>
        <TextBlock x:ConnectionId='3' x:Name="Nombre" TextWrapping="Wrap" Text="BEEDRILL" TextAlignment="Center" HorizontalTextAlignment="Center" Grid.Column="2" Grid.Row="9" Grid.RowSpan="2" Foreground="#55ad7a" FontFamily="Assets/Robotica.ttf" FontSize="40" VerticalAlignment="Center" />
        <TextBlock x:ConnectionId='4' x:Name="Tipo" TextWrapping="Wrap" Text="Tipo: Bicho/Veneno" TextAlignment="Center"  Grid.Column="5" Grid.Row="10"  Foreground="#55ad7a" FontFamily="Assets/Robotica.ttf" FontSize="20" HorizontalTextAlignment="Center" VerticalAlignment="Center" />
        <TextBlock x:ConnectionId='5' x:Name="PesAlt" TextWrapping="Wrap" Text="Peso: 29kgs
                   Altura: 1m " TextAlignment="Center"  Grid.Column="8" Grid.Row="10"  Foreground="#55ad7a" FontFamily="Assets/Robotica.ttf" FontSize="20" HorizontalTextAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Page>

