        <Image Source="Assets/masPoke.png" Stretch="Fill" Grid.ColumnSpan="10" Grid.RowSpan="12"
        ></Image>
        <local:UserControl_Beedrill VariableSizedWrapGrid.ColumnSpan="1" Botones="False" Grid.ColumnSpan="3" Grid.Row="3" Grid.RowSpan="3" Grid.Column="1" Nombre="False"/>
        <TextBlock x:ConnectionId='2' x:Name="Descripcion" TextWrapping="Wrap" FontStretch="Condensed" Text="Beedrill es un Pokémon de tipo Bicho/Veneno que forma parte de la franquicia de Pokémon. Es la evolución final de Weedle, y su apariencia se asemeja a la de una abeja gigante. Beedrill es conocido por su agresividad y su habilidad para atacar con una velocidad y precisión impresionantes.
" TextAlignment="Justify" Grid.Column="5" Grid.ColumnSpan="4" Grid.Row="4" Foreground="#55ad7a"  FontSize="11"  Grid.RowSpan="2" FontFamily="Cascadia Code Light" />
        <TextBlock x:ConnectionId='3' x:Name="Nombre" TextWrapping="Wrap" Text="Beedrill" TextAlignment="Center" HorizontalTextAlignment="Center" Grid.Column="2" Grid.Row="10" Foreground="Black" FontFamily="Cascadia Code Light" FontSize="40" VerticalAlignment="Center"  />
        <TextBlock x:ConnectionId='4' x:Name="Tipo" TextWrapping="Wrap" Text="Tipo: Bicho/Veneno" TextAlignment="Center"   Grid.Column="5" Grid.Row="10"  Foreground="#55ad7a" FontFamily="Cascadia Code Light"  FontSize="14" HorizontalTextAlignment="Center" VerticalAlignment="Center"  />
        <TextBlock x:ConnectionId='5' x:Name="PesAlt" TextWrapping="Wrap" Text="Peso: 29kgs
                   Altura: 1m " TextAlignment="Center"  Grid.Column="8" Grid.Row="10"  Foreground="#55ad7a"  FontSize="14" HorizontalTextAlignment="Center" VerticalAlignment="Center" FontFamily="Cascadia Code Light"   />
